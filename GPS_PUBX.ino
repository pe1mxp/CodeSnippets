// This routine change the baudrate from the UBLOX GPS serial communication
// Also it filters other NMEA's so there is only the neccessary RMC string left.


#define GPSport Serial2
#define oldGPSBaud 9600
#define newGPSBaud 57600

const unsigned char UBLOX_INIT[] = 
{
      0xB5, 0x62, 0x06, 0x01, 0x08, 0x00, 0xF0, 0x01, 0x00, 0x00, 0x00, 0x00, 0x00, 0x01, 0x01, 0x2B, // GxGLL off
      0xB5, 0x62, 0x06, 0x01, 0x08, 0x00, 0xF0, 0x03, 0x00, 0x00, 0x00, 0x00, 0x00, 0x01, 0x03, 0x39, // GxGSV off
      0xB5, 0x62, 0x06, 0x01, 0x08, 0x00, 0xF0, 0x05, 0x00, 0x00, 0x00, 0x00, 0x00, 0x01, 0x05, 0x47, // GxVTG off
      0xB5,0x62,0x06,0x01,0x08,0x00,0xF0,0x00,0x00,0x00,0x00,0x00,0x00,0x01,0x00,0x24,                // GxGGA off
      0xB5,0x62,0x06,0x01,0x08,0x00,0xF0,0x02,0x00,0x00,0x00,0x00,0x00,0x01,0x02,0x32,                // GxGSA off
  
    //0xB5,0x62,0x06,0x00,0x14,0x00,0x01,0x00,0x00,0x00,0xD0,0x08,0x00,0x00,0x80,0x25,0x00,0x00,0x07,0x00,0x03,0x00,0x00,0x00,0x00,0x00,0xA2,0xB5 // Baudrate 9600
    //0xB5,0x62,0x06,0x00,0x14,0x00,0x01,0x00,0x00,0x00,0xD0,0x08,0x00,0x00,0x00,0x4B,0x00,0x00,0x07,0x00,0x03,0x00,0x00,0x00,0x00,0x00,0x48,0x57 // baudrate 19200
    //0xB5,0x62,0x06,0x00,0x14,0x00,0x01,0x00,0x00,0x00,0xD0,0x08,0x00,0x00,0x00,0x96,0x00,0x00,0x07,0x00,0x03,0x00,0x00,0x00,0x00,0x00,0x93,0x90 // baudrate 38400
      0xB5,0x62,0x06,0x00,0x14,0x00,0x01,0x00,0x00,0x00,0xD0,0x08,0x00,0x00,0x00,0xE1,0x00,0x00,0x07,0x00,0x03,0x00,0x00,0x00,0x00,0x00,0xDE,0xC9 // baudrate 57600
};

void setup()
{
     Serial.begin(oldGPSBaud);
     initGPS();
}

void initGPS()
{
     GPSport.begin(oldGPSBaud);

     for (byte i = 0; i < sizeof(UBLOX_INIT); i++)
     {
         GPSport.write(UBLOX_INIT[i]);
     }

     GPSport.flush();
     GPSport.end();

     Serial.flush();
     Serial.end();
     Serial.begin(newGPSBaud);
     GPSport.begin(newGPSBaud);
}

void loop()
{
     if (GPSport.available())
     {
        char NMEA = GPSport.read();
        Serial.write(NMEA);
     }
}
